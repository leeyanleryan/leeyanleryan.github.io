---
layout: null
permalink: /search.json
---
[
{% assign pages = site.pages | where_exp:"p","p.title" %}
{% for page in pages %}
  {
    "title": {{ page.title | jsonify }},
    "url":   {{ page.url   | jsonify }},
    "content": {{ page.content 
                   | strip_html 
                   | strip_newlines 
                   | truncate: 140 
                   | jsonify }},
    {% assign parts = page.url | split:'/' %}
    {% assign length    = parts | size %}
    {% assign section_index = length | minus: 2 %}  
    {% assign words     = parts[section_index] | replace: '-', ' ' | raw_label | split: ' ' %}
    {% capture section %}
      {% for w in words %}
        {{ w | capitalize }}{% unless forloop.last %} {% endunless %}
      {% endfor %}
    {% endcapture %}
    "section": {{ section | strip | jsonify }}
  }{% unless forloop.last %},{% endunless %}
{% endfor %}
]